<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Restaurant #<%= @restaurant.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/restaurants" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit restaurant
        </a>
      </div>

      <div class="col">
        <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-block btn-outline-secondary">
          Delete restaurant
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @restaurant.name %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @restaurant.address %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @restaurant.comments_count %>
      </dd>

      <dt>
        Cuisine
      </dt>
      <dd>
        <% if @restaurant.cuisine.present? %>
          <a href="/cuisines/<%= @restaurant.cuisine_id %>">
            <%= @restaurant.cuisine.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@restaurant.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@restaurant.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "restaurant_templates/restaurant_favorites" %>
  </div>
</div>

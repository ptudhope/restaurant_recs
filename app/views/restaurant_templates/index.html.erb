<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restaurants
    </h1>

    <a href="/restaurants/new" class="btn btn-block btn-outline-secondary">
      Add a new restaurant
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Comments count
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <!-- Display restaurant.id start -->
        <td>
          <%= restaurant.id %>
        </td>
        <!-- Display restaurant.id end -->

        <!-- Display restaurant.name start -->
        <td>
          <%= restaurant.name %>
        </td>
        <!-- Display restaurant.name end -->

        <!-- Display restaurant.address start -->
        <td>
          <%= restaurant.address %>
        </td>
        <!-- Display restaurant.address end -->

        <!-- Display restaurant.comments_count start -->
        <td>
          <%= restaurant.comments_count %>
        </td>
        <!-- Display restaurant.comments_count end -->

        <!-- Display restaurant.cuisine_id start -->
        <td>
          <%= restaurant.cuisine.name %>
        </td>
        <!-- Display restaurant.cuisine_id end -->

        <!-- Display restaurant.created_at start -->
        <td>
          <%= time_ago_in_words(restaurant.created_at) %> ago
        </td>
        <!-- Display restaurant.created_at end -->

        <!-- Display restaurant.updated_at start -->
        <td>
          <%= time_ago_in_words(restaurant.updated_at) %> ago
        </td>
        <!-- Display restaurant.updated_at end -->

        <td>
          <a href="/restaurants/<%= restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @restaurants, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

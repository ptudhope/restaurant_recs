<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All comments
    </h1>

    <a href="/comments/new" class="btn btn-block btn-outline-secondary">
      Add a new comment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Author
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <!-- Display comment.id start -->
        <td>
          <%= comment.id %>
        </td>
        <!-- Display comment.id end -->

        <!-- Display comment.body start -->
        <td>
          <%= comment.body %>
        </td>
        <!-- Display comment.body end -->

        <!-- Display comment.author_id start -->
        <td>
          <%= comment.author_id %>
        </td>
        <!-- Display comment.author_id end -->

        <!-- Display comment.restaurant_id start -->
        <td>
          <%= comment.restaurant_id %>
        </td>
        <!-- Display comment.restaurant_id end -->

        <!-- Display comment.created_at start -->
        <td>
          <%= time_ago_in_words(comment.created_at) %> ago
        </td>
        <!-- Display comment.created_at end -->

        <!-- Display comment.updated_at start -->
        <td>
          <%= time_ago_in_words(comment.updated_at) %> ago
        </td>
        <!-- Display comment.updated_at end -->

        <td>
          <a href="/comments/<%= comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All favorites
    </h1>

    <a href="/favorites/new" class="btn btn-block btn-outline-secondary">
      Add a new favorite
    </a>
  </div>
</div>

<!-- Ransack Code start -->


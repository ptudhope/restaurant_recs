<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Restaurant
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @favorites.each do |favorite| %>
      <tr>
        <!-- Display favorite.id start -->
        <td>
          <%= favorite.id %>
        </td>
        <!-- Display favorite.id end -->

        <!-- Display favorite.restaurant_id start -->
        <td>
          <%= favorite.restaurant_id %>
        </td>
        <!-- Display favorite.restaurant_id end -->

        <!-- Display favorite.user_id start -->
        <td>
          <%= favorite.user_id %>
        </td>
        <!-- Display favorite.user_id end -->

        <!-- Display favorite.created_at start -->
        <td>
          <%= time_ago_in_words(favorite.created_at) %> ago
        </td>
        <!-- Display favorite.created_at end -->

        <!-- Display favorite.updated_at start -->
        <td>
          <%= time_ago_in_words(favorite.updated_at) %> ago
        </td>
        <!-- Display favorite.updated_at end -->

        <td>
          <a href="/favorites/<%= favorite.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

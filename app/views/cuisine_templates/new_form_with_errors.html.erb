<% if @cuisine.present? %>
  <% if @cuisine.errors.any? %>
    <% @cuisine.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new cuisine
</h1>


<hr>

<form action="/create_cuisine" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @cuisine.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create cuisine
  </button>
</form>

<hr>

<a href="/cuisines">
  Go back
</a>

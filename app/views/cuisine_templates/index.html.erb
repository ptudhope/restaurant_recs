<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cuisines
    </h1>

    <a href="/cuisines/new" class="btn btn-block btn-outline-secondary">
      Add a new cuisine
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cuisine_templates/cuisines_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cuisines.each do |cuisine| %>
      <tr>
        <!-- Display cuisine.id start -->
        <td>
          <%= cuisine.id %>
        </td>
        <!-- Display cuisine.id end -->

        <!-- Display cuisine.name start -->
        <td>
          <%= cuisine.name %>
        </td>
        <!-- Display cuisine.name end -->

        <!-- Display cuisine.created_at start -->
        <td>
          <%= time_ago_in_words(cuisine.created_at) %> ago
        </td>
        <!-- Display cuisine.created_at end -->

        <!-- Display cuisine.updated_at start -->
        <td>
          <%= time_ago_in_words(cuisine.updated_at) %> ago
        </td>
        <!-- Display cuisine.updated_at end -->

        <td>
          <a href="/cuisines/<%= cuisine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cuisines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

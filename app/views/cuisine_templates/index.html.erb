<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cuisines
    </h1>

    <a href="/cuisines/new" class="btn btn-block btn-outline-secondary">
      Add a new cuisine
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cuisine_templates/cuisines_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cuisines.each do |cuisine| %>
      <tr>
        <td>
          <%= cuisine.id %>
        </td>

        <td>
          <%= cuisine.name %>
        </td>

        <td>
          <%= time_ago_in_words(cuisine.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(cuisine.updated_at) %> ago
        </td>

        <td>
          <a href="/cuisines/<%= cuisine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cuisines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
